{
  "manifest_version": 3,
  "name": "Bread Converter",
  "version": "1.0",
  "description": "A simple browser extension for currency conversion. Select any currency value on a webpage, and a hovering box will display the converted amount in real-time.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],

  "icons": {
    "16": "icon/exchange-16.png",
    "32": "icon/exchange-32.png",
    "64": "icon/exchange-64.png",
    "128": "icon/exchange-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon/exchange-16.png",
      "32": "icon/exchange-32.png",
      "64": "icon/exchange-64.png",
      "128": "icon/exchange-128.png"
    },
    "default_popup": "popup.html"
  }
}